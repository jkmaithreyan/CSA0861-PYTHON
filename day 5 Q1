def lengthOfLastWord(a):

    l = 0
 

    # String a is 'final'-- can not be modified

    # So, create a copy and trim the spaces from

    # both sides

    x = a.strip()
 

    for i in range(len(x)):

        if x[i] == " ":

            l = 0

        else:

            l += 1

    return l
 
 
# Driver code

if _name_ == "_main_":

    inp = "Geeks For Geeks "

    print("The length of last word is",

          lengthOfLastWord(inp))
